                <div class="form-group">
                    <label for="address" class="form-label">Adresse</label>
                    <div class="input-wrapper">
                        <svg class="input-icon" viewBox="0 0 24 24" fill="none" stroke="var(--text-color-helper)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                          <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                          <circle cx="12" cy="10" r="3"></circle>
                        </svg>
                        <div class="adresse-input">
                            <input type="text" id="adresse" name="adresse" class="form-input" placeholder="Adresse complète" autocomplete="off" value="{{.Etablishment.Adresse}}">
                            <input type="number" id="postal" name="postal" class="form-input" placeholder="Postal" autocomplete="off" value="{{.Etablishment.Postal}}">
                        </div>
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="phone" class="form-label">Téléphone</label>
                    <div class="input-wrapper">
                        <svg class="input-icon" viewBox="0 0 24 24" fill="none" stroke="var(--text-color-helper)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                          <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
                        </svg>
                        <input type="number" id="phone" name="phone" class="form-input" placeholder="Numéro de téléphone" autocomplete="off" value="{{.Etablishment.Phone}}">
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="category" class="form-label">Catégorie</label>
                    <select id="category" class="form-select" name="category">
                        {{range .Category}}
                            <option value="{{.Id}}" {{if eq (printf "%d" .Id) $category}}selected{{end}}>{{.Value}}</option>
                        {{end}}
                    </select>
                </div>
                
                <div class="form-group">
                    <label class="form-label">Types de paiement acceptés</label>
                    <div class="input-wrapper">
                      <svg class="input-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <rect x="1" y="4" width="22" height="16" rx="2" ry="2"></rect>
                        <line x1="1" y1="10" x2="23" y2="10"></line>
                      </svg>
                      <span class="helper-text">Sélectionnez tous les moyens de paiement acceptés</span>
                    </div>
                    <div class="checkbox-group">
                        {{range $index, $value := .Etablishment.AllPayment}}
                            <div class="checkbox-wrapper">
                              <input type="checkbox" id="{{$value}}" class="form-checkbox" name="payment[{{$index}}]" value="{{$value}}">
                              <label for="cash" class="checkbox-label">{{$value}}</label>
                            </div>
                        {{end}}
                    </div>
                </div>
            </div>
            <div class="card-footer">
              <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
            </div>
        </form>
    </div>

