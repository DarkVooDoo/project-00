{{define "Head"}}
    <title>Connexion</title>
    <style>
        main{
            display: flex;
            align-items: center;
            .container{
                display: flex;
                justify-content: center;
                align-items: center;
                width: 500px;
                margin: 0 auto;
                padding: 20px;
                border-radius: 10px;
                background-color: var(--card-color);
                box-shadow: var(--card-shadow);
                .sign{
                    width: 100%;
                    .sign_header{
                        text-align: center;
                        font-size: 1.5rem;
                        margin-bottom: 1rem;
                    }
                    .sign_field{
                        margin-bottom: 1rem;
                        .label{
                            margin-bottom: .5rem;
                            display: inline-block;
                        }
                        .input{
                            position: relative;
                            border-radius: 25px;
                            height: 3rem;
                            padding: .5rem 15px;
                            display: flex;
                            gap: .5rem;
                            outline: 1px solid var(--border-color);
                            transition: outline-color 0.15s ease;
                            .input-icon{
                                height: calc(35px);
                                aspect-ratio: 1/1;
                                display: flex;
                                align-items: center;
                                justify-content: center;
                                .icon{
                                    width: 100%;
                                    height: 100%;
                                }
                            }
                            .divider{
                                height: 100%;
                                width: 2px;
                                background-color: var(--border-color);
                            }
                            .element{
                                border-radius: inherit;
                                width: 100%;
                                height: 100%;
                                background-color: var(--card-color);
                                outline: none;
                                padding-inline: 3px;
                                &:focus{
                                    outline: none;
                                    box-shadow: none;
                                }
                            }
                            &:has(> .element:focus){
                                outline: 1px solid var(--primary-color);
                                box-shadow: 0 0 2px 2px rgb(38 36 243 / 65%);
                            }
                            &:has(#s-password:user-valid){
                                border: 2px solid var(--success-color);
                            }
                            &:has(#s-password:user-invalid){
                                border: 2px solid red;
                            }
                        }
                    }
                    .switchScreen{
                        text-align: center;
                        background-color: transparent;
                        margin-bottom: 1rem;
                        font-weight: 500;
                        cursor: pointer;
                        width: 100%;
                    }
                    .submitBtn{
                        height: 40px;
                        width: 100%;
                        border-radius: 25px;
                        font-weight: bold;
                        cursor: pointer;
                        margin-bottom: .5rem;
                    }
                }
            }
        }
    </style>
{{end}}

