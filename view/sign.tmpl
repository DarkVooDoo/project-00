</div>
    <script>
        const signin = document.getElementById("signin")
        const signup = document.getElementById("signup")

        const onSwitchScreen = ()=>{
            signin.classList.toggle("hidden")
            signup.classList.toggle("hidden")
        }

    </script>
{{end}}
