    <div class="page-header">
      <h1 class="page-title">
        <svg class="page-icon" viewBox="0 0 24 24" fill="none" stroke="var(--text-color)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
          <line x1="16" y1="2" x2="16" y2="6"></line>
          <line x1="8" y1="2" x2="8" y2="6"></line>
          <line x1="3" y1="10" x2="21" y2="10"></line>
        </svg>
        Rendez-vous
      </h1>
      <p class="page-subtitle">Vue d'ensemble de tous les rendez-vous de l'établissement organisés par employé</p>
      
      <form class="filters-section" hx-post="/etablissement/{{.EtablishmentId}}/rendez-vous" hx-target="#appointment" hx-ext="json-enc-custom" hx-swap="outerHTML">
        <div class="filters-group">
          <div class="filter-item">
            <label class="filter-label">Date</label>
            <input type="date" name="date" class="filter-control" id="date-filter" value="2024-01-15">
          </div>
          
          <div class="filter-item">
            <label class="filter-label">Statut</label>
            <select class="filter-control" id="status-filter" name="status">
              <option value="all">Tous les statuts</option>
              <option value="Confirmé">Confirmé</option>
              <option value="Terminé">Terminé</option>
              <option value="Annulé">Annulé</option>
            </select>
          </div>
        </div>
        
        <div class="filters-group">
          <button class="btn btn-primary" type="submit">
                <svg viewBox="0 0 24 24" fill="none" class="btn-icon"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <path fill-rule="evenodd" clip-rule="evenodd" d="M3 7C3 6.44772 3.44772 6 4 6H20C20.5523 6 21 6.44772 21 7C21 7.55228 20.5523 8 20 8H4C3.44772 8 3 7.55228 3 7ZM6 12C6 11.4477 6.44772 11 7 11H17C17.5523 11 18 11.4477 18 12C18 12.5523 17.5523 13 17 13H7C6.44772 13 6 12.5523 6 12ZM9 17C9 16.4477 9.44772 16 10 16H14C14.5523 16 15 16.4477 15 17C15 17.5523 14.5523 18 14 18H10C9.44772 18 9 17.5523 9 17Z" fill="white"></path> </g></svg>
            Appliquer le filtre
          </button>
        </div>
      </form>
    </div>
    
    {{template "Appointment" .}}
   
