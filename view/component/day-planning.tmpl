{{define "Planning"}}
<div id="schedule">
    <div class="dayRecap">
        <div class="info">
            <h2 class="number">{{.Recap.Total}}</h2>
            <span class="label">Total</span>
        </div>
        <div class="info">
            <h2 class="number">{{.Recap.Accepted}}</h2>
            <span class="label">Confirmés</span>
        </div>
        <div class="info">
            <h2 class="number">{{.Recap.Finish}}</h2>
            <span class="label">Terminés</span>
        </div>
        <div class="info">
            <h2 class="number">{{.Recap.Cancelled}}</h2>
            <span class="label">Annulés</span>
        </div>
    </div>
    {{if gt (len .Shift) 0}}
    <div class="planning-container">
        <div class="planning-grid">
            <div class="time-column">
                {{range .Shift}}
                    <div class="time-slot">{{.}}</div>
                {{end}}
            </div>

            <div class="appointments-column" id="appointmentsColumn">
                {{range .Shift}}
                    <div class="hour-row"></div>
                {{end}}
                {{range .Schedule}}
                    <div class='appointment-card status-{{if eq .Status "Confirmé"}}confirmed{{else if .Status "Terminé"}}completed{{else}}cancelled{{end}}'  
                    style="top:{{.Position.Position}}px;height:{{.Position.Height}}px"
                    hx-patch="/planning" hx-target="#appointmentModal" hx-trigger="click" hx-ext="json-enc-custom" hx-swap="outerHTML" hx-on:click='document.body.style.overflow="hidden"'
                    hx-vals='{"id": "{{.Id}}","customerName": "{{.CustomerName}}", "contact": "{{.Contact}}", "timeframe": "{{.Timeframe}}", "status": "{{.Status}}", "serviceList": {{.ServiceTook}}, "price": "{{.Price}}"}' >
                        <div class="appointment-status"></div>
                        <div>
                            <div class="appointment-time">
                              <svg class="time-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <circle cx="12" cy="12" r="10"></circle>
                                <polyline points="12 6 12 12 16 14"></polyline>
                              </svg>
                              {{.Timeframe}}
                            </div>
                            <div class="appointment-client">
                              <svg class="client-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                <circle cx="12" cy="7" r="4"></circle>
                              </svg>
                              {{.CustomerName}}
                            </div>
                        </div>
                    </div>
                {{end}}
            </div>
        </div>

        <div class="legend">
            <div class="legend-item">
                <div class="legend-color legend-confirmed"></div>
                <span>Confirmé</span>
            </div>
            <div class="legend-item">
                <div class="legend-color legend-pending"></div>
                <span>En attente</span>
            </div>
            <div class="legend-item">
                <div class="legend-color legend-completed"></div>
                <span>Terminé</span>
            </div>
        </div>
    </div>
    {{else}}
    <div class="close-card">
        <svg class="icon" viewBox="0 0 24 24" fill="none"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <path d="M10 13L14 17M14 13L10 17M3 9H21M7 3V5M17 3V5M6.2 21H17.8C18.9201 21 19.4802 21 19.908 20.782C20.2843 20.5903 20.5903 20.2843 20.782 19.908C21 19.4802 21 18.9201 21 17.8V8.2C21 7.07989 21 6.51984 20.782 6.09202C20.5903 5.71569 20.2843 5.40973 19.908 5.21799C19.4802 5 18.9201 5 17.8 5H6.2C5.0799 5 4.51984 5 4.09202 5.21799C3.71569 5.40973 3.40973 5.71569 3.21799 6.09202C3 6.51984 3 7.07989 3 8.2V17.8C3 18.9201 3 19.4802 3.21799 19.908C3.40973 20.2843 3.71569 20.5903 4.09202 20.782C4.51984 21 5.07989 21 6.2 21Z" stroke="var(--text-color)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path> </g></svg>
        <h3 class="title"> Établissement fermé aujourd'hui</h3>
        <p class="more">Votre agenda est libre pour la journée. Profitez de ce temps pour vous reposer ou planifier vos prochains rendez-vous.</p>
    </div>
    {{end}}

    <div class="modal-overlay" id="appointmentModal"></div>
</div>
{{end}}
