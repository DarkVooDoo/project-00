{{define "Planning"}}
<div id="schedule">
    <div class="dayRecap">
        <div class="info">
            <h2 class="number">{{.Recap.Total}}</h2>
            <span class="label">Total</span>
        </div>
        <div class="info">
            <h2 class="number">{{.Recap.Accepted}}</h2>
            <span class="label">Confirmés</span>
        </div>
        <div class="info">
            <h2 class="number">{{.Recap.Finish}}</h2>
            <span class="label">Terminés</span>
        </div>
        <div class="info">
            <h2 class="number">{{.Recap.Cancelled}}</h2>
            <span class="label">Annulés</span>
        </div>
    </div>
    <div class="planning-container">
        <div class="planning-grid">
            <div class="time-column">
                {{range .Shift}}
                    <div class="time-slot">{{.}}</div>
                {{end}}
            </div>

            <div class="appointments-column" id="appointmentsColumn">
                {{range .Shift}}
                    <div class="hour-row"></div>
                {{end}}
                {{range .Schedule}}
                    <div class='appointment-card status-{{if eq .Status "Confirmé"}}confirmed{{else if .Status "Terminé"}}completed{{else}}cancelled{{end}}'
                        style="top:{{.Position.Position}}px;height:{{.Position.Height}}px">
                        <div class="appointment-status"></div>
                        <div>
                            <div class="appointment-time">
                              <svg class="time-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <circle cx="12" cy="12" r="10"></circle>
                                <polyline points="12 6 12 12 16 14"></polyline>
                              </svg>
                              {{.Timeframe}}
                            </div>
                            <div class="appointment-client">
                              <svg class="client-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                <circle cx="12" cy="7" r="4"></circle>
                              </svg>
                              {{.CustomerName}}
                            </div>
                        </div>
						<a href="/rendez-vous/{{.Id}}" class="appointment-view">
							<svg class="icon" viewBox="0 0 24 24" fill="none"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <path d="M15.0007 12C15.0007 13.6569 13.6576 15 12.0007 15C10.3439 15 9.00073 13.6569 9.00073 12C9.00073 10.3431 10.3439 9 12.0007 9C13.6576 9 15.0007 10.3431 15.0007 12Z" stroke="var(--text-color)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path> <path d="M12.0012 5C7.52354 5 3.73326 7.94288 2.45898 12C3.73324 16.0571 7.52354 19 12.0012 19C16.4788 19 20.2691 16.0571 21.5434 12C20.2691 7.94291 16.4788 5 12.0012 5Z" stroke="var(--text-color)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path> </g>
							</svg>
						</a>
                    </div>
                {{end}}
            </div>
        </div>

        <div class="legend">
            <div class="legend-item">
                <div class="legend-color legend-confirmed"></div>
                <span>Confirmé</span>
            </div>
            <div class="legend-item">
                <div class="legend-color legend-pending"></div>
                <span>En attente</span>
            </div>
            <div class="legend-item">
                <div class="legend-color legend-completed"></div>
                <span>Terminé</span>
            </div>
        </div>
    </div>
</div>
{{/*TODO: Modal to show complete appointment */}}
{{end}}
